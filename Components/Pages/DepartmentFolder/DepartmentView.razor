@using EmployeeManagement.Web.Data.Models
@using EmployeeManagement.Web.Services

@if (department == null)
{
    <p>Loading...</p>
}
else
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Department Details</h5>
                    <button type="button" class="btn-close" @onclick="() => OnClose.InvokeAsync()"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-2"><strong>Name:</strong> @department.DepartmentName</div>
                    <div class="mb-2"><strong>Description:</strong> @department.Description</div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="() => OnClose.InvokeAsync()">Close</button>
                </div>
            </div>
        </div>
    </div>
}
