@using EmployeeManagement.Web.Data.Models
@using EmployeeManagement.Web.Services

@if (employee == null)
{
    <p>Loading...</p>
}
else
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Employee Details</h5>
                    <button type="button" class="btn-close" @onclick="() => OnClose.InvokeAsync()"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-2"><strong>Name:</strong> @employee.FirstName @employee.LastName</div>
                    <div class="mb-2"><strong>Department:</strong> @employee.DepartmentName</div>
                    <div class="mb-2"><strong>Email:</strong> @employee.Email</div>
                    <div class="mb-2"><strong>Gender:</strong> @employee.Gender</div>
                    <div class="mb-2">
                        <strong>Aadhar card:</strong> @if (!string.IsNullOrEmpty(employee.AadharPath))
                        {
                            <a href="@employee.AadharPath" target="_blank" class="btn btn-sm btn-info">
                                View Aadhar
                            </a>
                        }
                    </div>
                    <div class="mb-2"><strong>IsActive:</strong> @employee.IsActive</div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="() => OnClose.InvokeAsync()">Close</button>
                </div>
            </div>
        </div>
    </div>
}
